<!-- app/views/devise/sessions/new.html.erb -->

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-4 col-md-6 col-sm-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'form-control mb-3' %>
        <%= f.password_field :password, autocomplete: 'current-password', placeholder: 'Password', class: 'form-control mb-3' %>
        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, class: 'form-check-label' %>
          </div>
        <% end %>
        <%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>
      <% end %>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
