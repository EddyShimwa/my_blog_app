<div>
    <img src=<%= @user.photo%> alt="<%= @user.name%>'s photo">
    <div>
        <h1> <%= @user.name%> </h1>
        <p> number of posts: <%= @user.posts_counter || 0  %></p>
    </div>
</div>
<div>
    <h2>Bio</h2>
    <p> <%= @user.bio%> </p>
</div>
<div>
    <a href="<%= @user.id %>/posts"><h1> Posts </h1></a>
    <div>
        <% @user.recent_posts.each do |post| %>
            <div>
                <h3>Post #<%= post.id %> <%= link_to user_post_path(@user.id, post.id) do %><%= post.title %></h3>
                <% end %>
                <p> <%= post.text %> </p>
                <p> Comments: <%= post.comments_counter || 0 %>, Likes: <%= post.likes_counter%> </p>
            </div>
        <% end %>
    </div>
</div>
<a href="<%=@user.id%>/posts" class="button">See all posts</a>


