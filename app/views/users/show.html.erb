<section class= "users-card">
  <div class="user-profile" >
     <img src="<%=@user.photo%>">
    <div>
    <h1> <%=@user.name%></h1>
    <h3> Number of posts: <%=@user.postsCounter%><h3>
    </div>
  <div>
  <div class="user-bio">
    <h3> <%=@user.bio%><h3>
   </div>
   <ul>
   <% @posts.each do |post|%>
     <li>
      <h2><%=post.title%><h2>
      <h3><%=post.text%></h3>
      <div>
          <h5>Comments:<%=post.comments_counter%><h5>
          <h5>Likes:<%=post.likes_counter%></h5>
       <div>
     </li>
     <%end%>
   </ul>

   <button>
     <a href=<%="/users/#{@user.id}/posts"%>> See All Posts</a>
   </button>
</section>