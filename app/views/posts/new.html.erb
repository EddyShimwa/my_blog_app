<div class="container my-4">
  <h1 style="text-align: center">Write a new post</h1>

  <%= form_with model: @post, url: user_posts_path(user.id), class: "my-4" do |form| %>
    <div class="form-group">
      <%= form.label :title, "Title" %>
      <%= form.text_field :title, class: "form-control", placeholder: "Enter a title for your post" %>
    </div>

    <div class="form-group">
      <%= form.label :text, "Content" %>
      <%= form.text_area :text, class: "form-control", placeholder: "Write your post content here..." %>
    </div>

    <%= form.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>

