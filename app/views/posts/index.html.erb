<section class= "users-card">
  <div class="user-profile" >
     <img src="<%=@user.photo%>">
    <div>
    <h1> <%=@user.name%></h1>
    <h3> Number of posts: <%=@user.postsCounter%><h3>
    </div>
  <div>
   <ul>
   <% @posts.each do |post|%>
     <li>
     <a href="<%= user_post_path(@user, post) %>">
      <div>
          <h2><%=post.title%><h2>
          <h3><%=post.text%></h3>
          <p>Comments:<%=post.comments_counter%><p>
          <p>Likes:<%=post.likes_counter%></p>
       <div>
     </li>
     <div class="comments"> 
     <ul>
        <%post.most_recent_comments.each do |comment|%>
        <li>
             <h3><%=@user.name%> : <%=comment.text%></h3>
        </li>
        <%end%>
      </ul>
      </a>
     </div>
     <%end%>
   </ul>

   <button>
     <a href=<%="/users/#{@user.id}/posts"%>> Pagination</a>
   </button>
</section>